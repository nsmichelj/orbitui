---
import GradientBackground from "@/components/GradientBackground.astro";
import Header from "@/components/sections/Header.astro";
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:type" content="article" />
    <meta
      property="og:title"
      content="OrbitUI Accessible, Customizable, & Lightweight component library"
    />
    <meta
      property="og:description"
      content="A modular, customizable component library to accelerate your Astro projects with pre-built components powered by Tailwind CSS."
    />
    <meta property="og:image" content="/social-banner.png" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="OrbitUI Accessible, Customizable, & Lightweight component library"
    />
    <meta
      name="twitter:description"
      content="A modular, customizable component library to accelerate your Astro projects with pre-built components powered by Tailwind CSS."
    />
    <meta name="twitter:image" content="/social-banner.png" />

    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground min-h-dvh font-sans">
    <GradientBackground />
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
